---
import { siteConfig } from '@/site-config'
import HeaderLink from './HeaderLink.astro'

const today = new Date()
---

<footer class='flex flex-col items-center w-full px-16 h-28 border-t-2'>
	<p class='text-center'>
		&copy; {today.getFullYear()}
		{siteConfig.author}. All rights reserved.
	</p>
	<div class='flex justify-center items-center md:justify-end gap-3 md:p-0'>
		<HeaderLink
			class='flex items-center gap-1 text-2xl font-semibold'
			href={`/impress`}
			aria-label={'Impressum'}
		>
			<span>Impressum</span>
		</HeaderLink>
	</div>
</footer>
